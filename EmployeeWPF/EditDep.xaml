<Window x:Class="EmployeeWPF.EditDep"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeWPF"
        mc:Ignorable="d"
        Title="Изменение департамента" Height="150" MinHeight="150" MaxHeight="150" Width="240" MaxWidth="240" MinWidth="240">
    <Grid>
        <TextBox x:Name="tb_Name" HorizontalAlignment="Center" Height="23" Margin="0,30,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Имя департамента" VerticalAlignment="Top"/>
        <Button x:Name="btn_ok" Content="Ok" HorizontalAlignment="Left" Margin="25,80,0,0" VerticalAlignment="Top" Width="76"/>
        <Button x:Name="btn_cancel" Content="Отмена" HorizontalAlignment="Left" Margin="135,80,0,0" VerticalAlignment="Top" Width="76"/>

    </Grid>
</Window>
