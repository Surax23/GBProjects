<Window x:Class="TestSort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestSort"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lb" Background="Azure">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Rectangle Height="2" Width="{Binding}" Fill="Bisque"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="addBtn" Content="add" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Margin="0,40,0,0"/>
        <Button x:Name="sortBtn" Content="sort" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Margin="0,80,0,0"/>

    </Grid>
</Window>
