<Window x:Class="EmployeeList.EditDep"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeList"
        mc:Ignorable="d"
        Title="Название департамента" Height="100" MinHeight="100" MaxHeight="100" Width="240" MaxWidth="240" MinWidth="240">
    <Grid>
        <TextBox x:Name="tb_Name" HorizontalAlignment="Center" Height="23" Margin="0,30,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Имя департамента" VerticalAlignment="Top"/>

    </Grid>
</Window>
